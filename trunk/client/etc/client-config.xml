<?xml version="1.0" ?>

<lucane-client>

  <!-- default login in connection dialog -->
  <login value="guest" />
  
  <!-- server used -->
  <server host="localhost" port="9115" />

  <!-- language used (if available) -->
  <!-- supported languages : en, fr, nl -->
  <language value="en" />
  
  <!-- look and feel -->
  <!-- you should comment this under MacOS X -->
  <looknfeel class="com.incors.plaf.kunststoff.KunststoffLookAndFeel" />
  
  <!-- proxy if client is using NAT -->
  <!--
  <proxy host="localhost" port="5119" />
  -->
  
  <!-- listener port if you want to enforce a port for the client -->
  <!--
  <listener port="1951" />
  -->
  
  <!-- public IP address to use if the host has multiple network interfaces -->
  <!--
  <public-ip address="192.168.0.1" />
  -->
</lucane-client>
