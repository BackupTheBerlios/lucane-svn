<database>

  <table name="forum">
    <column name="name" type="smalltext" />
    <primary-key columns="name" />
  </table>

  <table name="forumMessage">  
    <column name="id" type="int" />
    <column name="idref" type="int" />
    <column name="forum" type="smalltext" />
    <column name="author" type="smalltext" />
    <column name="title" type="smalltext" />
    <column name="datum" type="smalltext" />
    <column name="content" type="text" />
    <primary-key columns="id" />
  </table>


</database>

