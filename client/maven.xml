<?xml version="1.0"?>
<project
  xmlns:deploy="deploy">

  <property name="dist.dir" value="../../dist/client" />
  <property name="dist.lib.dir" value="${dist.dir}/lib" />
  <property name="dist.etc.dir" value="${dist.dir}/etc" />

  <goal name="deploy">
    <deploy:copy-deps todir="${dist.lib.dir}" />
    <copy todir="${dist.lib.dir}">
      <fileset dir="target">
        <include name="*.jar" />
      </fileset>
    </copy>

    <copy todir="${dist.etc.dir}">
      <fileset dir="etc">
        <include name="*.xml" />
      </fileset>
    </copy>

    <copy todir="${dist.dir}">
      <fileset dir=".">
        <include name="client.*" />
      </fileset>
    </copy>
  </goal>
  
</project>
